<div class="row">
<div class="col-md-12">
    <div class="col-md-12 text-center"> 
        {{#unless courses}}
        <strong>{{message}}</strong>
        {{/unless}}
    </div>
<br> <h2>Courses</h2> <hr />
<div class="table-responsive">
<table class="table">
    <thead>
        <tr>
            <th>Course Code</th>
            <th>Course Description</th>           
        </tr>
    </thead>
    <tbody>
        {{#each courses}}
        <tr>
            <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
            <td><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
</div> </div>